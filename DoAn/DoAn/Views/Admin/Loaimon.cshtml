@using DoAn.Models
@using PagedList.Mvc;
@model PagedList.PagedList<DoAn.Models.LOAIMON>


@{
    ViewBag.Title = "Loaimon";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>LOẠI MÓN ĂN</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "Themmoiloaimon")
</p>
<table class="table">
    <tr>
        <th style="width:200px">  Tên loại </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tenloai)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Sualoaimon", new { id = item.Maloai }) |
            @Html.ActionLink("Xóa", "Xoaloaimon", new { id = item.Maloai})
        </td>
    </tr>
}

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
<div class="MenuTrang">

    @Html.PagedListPager(Model, page => Url.Action("Monan", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>
