@model DoAn.Models.CTMONAN
    @{
        ViewBag.Title = "ThemmoiMonan";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    <h2>THÊM MÓN ĂN MỚI</h2>

    @using (Html.BeginForm("ThemmoiMonan","Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Tenmon, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tenmon)
                    @Html.ValidationMessageFor(model => model.Tenmon)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Giaban, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Giaban)
                    @Html.ValidationMessageFor(model => model.Giaban)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mota, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <textarea name="Mota">Mô tả thông tin món ăn</textarea>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Anh, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="fileUpload" />
                    @ViewBag.Thongbao
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Trangthai, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Trangthai)
                    @Html.ValidationMessageFor(model => model.Trangthai)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Maloai, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Maloai")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="THÊM MỚI" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("VỀ TRANG QUẢN LÝ MÓN ĂN", "Monan")
    </div>
