        @Html.ValidationSummary(true)
            <tr style="height:40px;color:white">
                <td> Họ tên khách hàng:</td>
                <td>@Html.TextBox("HotenKH")
                @ViewData["Loi1"]
                </td>
            </tr>
            <tr style="height:40px;color:white">
                <td> Tên đăng nhập:</td>
                <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]</td>
            </tr>
            <tr style="height:40px;color:white">
                <td>  Mật khẩu:</td>
                <td> 
                @Html.Password("Matkhau")
                @ViewData["Loi3"]</td>
            </tr>
            <tr style="height:40px;color:white">
                <td>Mật khẩu nhập lại: </td>
                <td>
                @Html.Password("Matkhaunhaplai")
                @ViewData["Loi4"]</td>
            </tr>
        
        
            <tr style="height:40px;color:white">
                <td> Email:</td>
                <td> @Html.TextBox("Email")
                @ViewData["Loi5"]</td>
            </tr>
            <tr style="height:40px;color:white">
                <td> Địa chỉ:</td>
