@model IEnumerable<DoAn.Models.CTMONAN>

@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

    <div class="col-md-9 shop-section">
        <div class="row articles">
            @foreach (var dish in Model)
            {

                <div class="col-md-4 col-sm-6" style="margin-top:30px;">
                    <img class="img-responsive" src="~/Images2/@dish.Anh" style="height:270px" >
                    <div class="text" >
                        <a href="http://localhost:59620/Order/DeTails/@dish.Mamon">
                            <span style="font-size:17px;">
                                @dish.Tenmon
                            </span>
                        </a>
                        <p>
                            @dish.Giaban.000đ
                        </p>
                    </div>
                </div>

            }
        </div>
    </div>
