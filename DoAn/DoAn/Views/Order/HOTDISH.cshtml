@model IEnumerable<DoAn.Models.HOTDISH>

<!--bottom-articles-->
<div class="container">
    <div class="row articles col-md-12 col-sm-12" style="height:60px;text-align:center; margin-top:100px; margin-bottom:10px"><span style="text-align: center;font-size:20px;color:black; background-color: white;background-size:50px;border-radius:15px;padding :15px">Bán Chạy Trong Tuần</span></div>
    <div class="row articles">
        @foreach (var Food in Model)
        {
            <div class="col-md-3 col-sm-6">
                <img class="img-responsive" src="~/Images2/@Food.ANH" alt="img" style=" height: 270px">
                <div class="text">
                    <a href="@Url.Action("DeTails", "Order", new { id = Food.Mamon })">
                        <span>
                            @Food.Tenmon
                        </span>
                    </a>
                    <p>
                        @Food.GIABAN.000Đ
                    </p>
                </div>
            </div>
        }
    </div>
</div>
<!--end-bottom-articles-->
