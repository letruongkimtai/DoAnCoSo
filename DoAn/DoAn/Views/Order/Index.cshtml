@model IEnumerable<DoAn.Models.CTMONAN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container">
    <div class="row articles col-md-12 col-sm-12" style="height:60px;text-align:center; margin-top:30px;margin-bottom:10px"><span style="text-align: center;font-size:20px;color:black; background-color: white;background-size:50px;border-radius:15px;padding :15px">Sản Phẩm Mới</span></div>
    <div class="row articles">


        @foreach (var Food in Model)
        {
            <!--articles-->
            <div class="col-md-3 col-sm-6">
                <img class="img-responsive" src="~/Images2/@Food.Anh" alt="img" style=" height: 270px">
                <div class="text">
                    <a href="@Url.Action("DeTails","Order",new { id = Food.Mamon})">
                        <span>
                            @Food.Tenmon
                        </span>
                    </a>
                    <p>
                        @Food.Giaban.000Đ
                    </p>
                </div>
            </div>
            <!--end-articles-->

        }
    </div>
</div>
    

